<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bytepace.dimusco">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DimuscoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activity.LibraryActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.settings.main.SettingsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.settings.general.SettingsGeneralActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.settings.edit.SettingsEditActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.settings.layers.SettingsLayersActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.settings.language.SettingsLanguageActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.settings.edit.defaults.SettingsEditDefaultsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.settings.edit.colors.SettingsEditColorActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.settings.edit.symbols.SettingsEditSymbolsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.settings.edit.layers.SettingsEditLayersActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Activity.PagesGridActivity" />

        <activity
            android:name=".Activity.CropPageActivity" />

        <activity
            android:name=".ui.editor.ScoreActivity"/>

        <activity android:name=".ui.login.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>